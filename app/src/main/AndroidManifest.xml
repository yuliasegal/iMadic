<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philips.iMadic" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="com.philips.iMadic.iMadicApp"
        android:icon="@drawable/i_madic"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Activities.MyMedicationsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Activities.AddMedicationActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".Activities.MyMedicationsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MyMedicationsActivity" />
        </activity>

        <activity
            android:name=".Activities.HandleResultActivity"
            android:label="@string/title_activity_interactions"
            android:parentActivityName=".Activities.MyMedicationsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MyMedicationsActivity" />
        </activity>
    </application>

</manifest>
